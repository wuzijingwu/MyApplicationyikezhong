<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/huanghun"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/quxiao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#318aa0">

        <TextView
            android:id="@+id/back_production"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:text="取消" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="创作"
            android:textColor="#fff"
            android:textSize="15dp" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/images1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:background="@drawable/shi" />

    <ImageView
        android:id="@+id/images2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/images1"
        android:layout_below="@+id/images1"
        android:layout_marginTop="65dp"
        android:background="@drawable/duan" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/raw_1499917357" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image_par"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageView6"
                    android:layout_marginStart="27dp"
                    app:roundAsCircle="true" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/image_par"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/white"
                    android:text="+关注" />

                <ImageView
                    android:id="@+id/dianzan3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/recycler_par"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/dianzanss" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_par"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/button"
                    android:layout_marginTop="11dp"></android.support.v7.widget.RecyclerView>


                <ImageView
                    android:id="@+id/pinlunssss"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/dianzan3"
                    android:layout_marginTop="23dp"
                    android:src="@drawable/raw_1499933789" />


            </RelativeLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>